{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["ES5", "ES2015.Collection", "ES2015.Promise", "DOM"],
    "outDir": "./build/lib",
    "baseUrl": "."
  },
  "include": [
    "src/main/*.ts",
    "src/browser/*.ts",
    "src/browser/electron-extension/*.ts",
    "src/browser/utils-extension/*.ts"
  ]
}
